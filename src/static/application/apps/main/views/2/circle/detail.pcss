.wrapper {
  padding: 0 0 0 15px;
  font-size: 12px;
  h1 {
    font-weight: 600;
    font-size: 12px;
    color: rgba(0, 0, 0, 0.65);
    line-height: 2.2;
  }
  p {
    line-height: 2.2;
    span {
     margin-right: 10px;
    }
  }
}
.line {
	border:0;
  height:1px;
  background-color:#ddd;
  margin: 30px 0px;
}
.img-wrapper {
	padding: 20px 10%;
	@media (max-width: 768px) {
		padding: 0;
	}
}
.img-item {
	width: 138px;
	height: 138px;
	@media (max-width: 768px) {
  	width: 96px;
		height: 96px;
	}
	margin: 0 8px 8px 0;
	padding: 8px;
  border-radius: 4px;
  border: 1px solid #d9d9d9;
	display: inline-block;
}
.img-item > img {
	width: 120px;
	height: 120px;
	@media (max-width: 768px) {
  	width: 78px;
		height: 78px;
	}
}
