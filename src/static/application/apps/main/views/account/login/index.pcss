.wrapper {
	padding-top: 10%;
	height: 100vh;
	overflow: hidden;
}
.form {
	margin: 0 auto;
	width: 320px;
	padding: 36px 36px 10px 36px;
	box-shadow: 0 0 100px rgba(0,0,0,.08);
	button {
		width: 100%;
		font-size: 14px;
	}

	p {
		color: rgb(204, 204, 204);
		text-align: center;
		margin-top: 16px;

		span {
			&:first-child {
				margin-right: 16px;
			}
		}
	}
}

.logo {
	text-align: center;
	height: 40px;
	line-height: 40px;
	cursor: pointer;
	margin-bottom: 24px;

	img {
		width: 40px;
		margin-right: 8px;
	}

	span {
		vertical-align: middle;
		font-size: 16px;
		text-transform: uppercase;
		display: inline-block;
	}
}
.button {
	margin: -5px 0 10px 0;
}
.captcha {
	width: 70px;
	height: 32px;
	margin-left: 10px;
	&:hover {
		cursor: pointer;
	}
}
.text {
	text-align: center;
	width: 320px;
	margin: 10% auto;
}
.smsCodeBtn {
  margin-left: 10px;
  padding: 0 5px;
  width: 95px!important;
}
.reset {
	margin-top: 8px;
	float: right;
}