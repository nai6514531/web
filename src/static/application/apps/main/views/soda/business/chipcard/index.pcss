.detail {
	max-width: 600px;
	h2 {
		margin-bottom: 10px;
		opacity: 0.9;
		i {
			margin-right: 5px;
		}
		button {
		  vertical-align: text-bottom;
    	margin-left: 10px;
		}
	}
	.info {
		.apply {
			font-size: 16px;
			color: rgba(0, 0, 0, 0.65);
		}
		span {
			font-size: 12px;
			color: rgba(0, 0, 0, 0.45);
			margin-right: 10px;
		}
		p {
			font-size: 18px;
			color: rgba(0, 0, 0, 0.65);
			margin-bottom: 10px;
		}
	}
}
.form {
	padding: 20px 0 0;
	.tip {
		color: #ec5204;
    line-height: 20px;
	}
}